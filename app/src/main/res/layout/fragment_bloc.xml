<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- ToggleButton en haut -->
    <ToggleButton
        android:id="@+id/toggleButtonBlocStudent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:checked="false"
        android:textOn="Student"
        android:textOff="Bloc"
        android:layout_marginBottom="16dp"
        android:background="@android:color/black"
        android:textColor="@android:color/white" />

    <!-- RecyclerView qui prend tout l'espace disponible -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewBlocs"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!-- Bouton en bas -->
    <Button
        android:id="@+id/addBlocButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Bloc"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="@android:color/black"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:padding="16dp"
        android:gravity="center" />
</LinearLayout>
