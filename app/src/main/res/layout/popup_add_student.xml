<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="20dp"
    android:layout_margin="20dp"
    android:background="@android:color/white"
    android:elevation="8dp">

    <!-- Titre de la popup -->
    <TextView
        android:id="@+id/popupStudentTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ajouter un Étudiant"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="@android:color/black"
        android:layout_marginBottom="24dp" />

    <!-- Champ de texte pour le prénom de l'étudiant -->
    <EditText
        android:id="@+id/editTextStudentFirstName"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:hint="Prénom"
        android:padding="16dp"
        android:background="@android:drawable/editbox_background_normal"
        android:textColor="@android:color/black"
        android:textColorHint="@android:color/darker_gray"
        android:layout_marginBottom="20dp" />

    <!-- Champ de texte pour le nom de l'étudiant -->
    <EditText
        android:id="@+id/editTextStudentLastName"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:hint="Nom"
        android:padding="16dp"
        android:background="@android:drawable/editbox_background_normal"
        android:textColor="@android:color/black"
        android:textColorHint="@android:color/darker_gray"
        android:layout_marginBottom="20dp" />

    <!-- Champ de texte pour le matricule de l'étudiant -->
    <EditText
        android:id="@+id/editTextStudentMatricule"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:hint="Matricule"
        android:padding="16dp"
        android:background="@android:drawable/editbox_background_normal"
        android:textColor="@android:color/black"
        android:textColorHint="@android:color/darker_gray"
        android:layout_marginBottom="20dp" />

    <!-- Bouton Confirmer -->
    <Button
        android:id="@+id/confirmStudentButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:backgroundTint="#007BFF"
        android:text="Confirmer"
        android:textColor="@android:color/white"
        android:textStyle="bold" />

    <!-- Bouton Annuler -->
    <Button
        android:id="@+id/cancelStudentButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@android:color/darker_gray"
        android:text="Annuler"
        android:textColor="@android:color/black"
        android:textStyle="bold" />
</LinearLayout>
